{
  "manifest_version": 2,

  "name": "chrome-col",
  "description": "Create a column overlay",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-1.11.3.min.js", "overlay.js"]
    }
  ],
  "web_accessible_resources": [
    "scripts/*"
  ],

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": { "16": "img/icon-16.png",
             "48": "img/icon-48.png",
             "128": "img/icon-128.png" }
}
